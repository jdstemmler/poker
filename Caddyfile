# Caddyfile â€” adjust :80 to your domain for automatic HTTPS
:80 {
    # Frontend (SPA)
    handle /* {
        reverse_proxy frontend:80
    }

    # Backend API
    handle /api/* {
        reverse_proxy backend:8000
    }

    # Backend WebSocket
    handle /ws/* {
        reverse_proxy backend:8000
    }
}
